{
  "name": "orders-api-tests",
  "version": "1.0.0",
  "description": "Integration tests for Orders API including BOLA vulnerability detection",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:bola": "jest --testNamePattern='BOLA'"
  },
  "dependencies": {
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "verbose": true,
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "./reports",
        "outputName": "junit.xml"
      }]
    ]
  }
}
