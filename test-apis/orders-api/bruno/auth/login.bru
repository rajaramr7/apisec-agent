meta {
  name: Login
  type: http
  seq: 1
}

post {
  url: {{base_url}}/auth/token
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "email": "alice@example.com",
    "password": "alice_pass_123"
  }
}

script:post-response {
  if (res.status === 200) {
    bru.setEnvVar("alice_token", res.body.access_token);
  }
}
