# Orders API Configuration
# Copy this file to .env and fill in the values

# API Server
API_BASE_URL=http://localhost:3000/v2
API_PORT=3000

# OAuth2 Client Credentials
CLIENT_ID=your_client_id
CLIENT_SECRET=your_client_secret

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/orders_db
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRY=3600

# Test User Credentials
TEST_USER_ALICE_EMAIL=alice@example.com
TEST_USER_ALICE_PASSWORD=
TEST_USER_ALICE_ID=

TEST_USER_BOB_EMAIL=bob@example.com
TEST_USER_BOB_PASSWORD=
TEST_USER_BOB_ID=

# API Keys
STRIPE_API_KEY=
SENDGRID_API_KEY=

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
